<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".woshi_fragment.woshi_kongtiao">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:background="@drawable/background_linearlayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/woshi_wendu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="17"
                android:textColor="@color/theme"
                android:textSize="80dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="℃"
                android:textColor="@color/theme"
                android:textSize="30dp">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/xue">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动"
                android:textColor="@color/theme"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        android:background="@drawable/background_linearlayout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/woshi_zhileng"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:scaleType="center"
                    android:src="@drawable/xue"
                    android:background="@drawable/button_circle_notselect">
                </ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="38dp"
                    android:text="制冷">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/woshi_chuchen"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:scaleType="center"
                    android:src="@drawable/fuchen"
                    android:background="@drawable/button_circle_notselect">
                </ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="38dp"
                    android:text="除尘">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/woshi_zhire"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:scaleType="center"
                    android:src="@drawable/qing"
                    android:background="@drawable/button_circle_notselect">
                </ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="38dp"
                    android:text="制热">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/woshi_tongfeng"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:scaleType="center"
                    android:src="@drawable/tianqi"
                    android:background="@drawable/button_circle_notselect">
                </ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="38dp"
                    android:text="通风">
                </TextView>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/woshi_fengsu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="风速"
                    android:textColor="@color/theme"
                    android:background="@drawable/button_circle_notselect">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/woshi_fengxiang"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="风向"
                    android:textColor="@color/theme"
                    android:background="@drawable/button_circle_notselect">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/woshi_dingshi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="定时"
                    android:textColor="@color/theme"
                    android:background="@drawable/button_circle_notselect">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/woshi_jieneng"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="节能"
                    android:textColor="@color/theme"
                    android:background="@drawable/button_circle_notselect">
                </Button>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_corner"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/theme"
                android:textSize="50dp"
                android:layout_marginLeft="40dp"
                android:text="-">
            </TextView>
            <ImageButton
                android:id="@+id/woshi_kaiguan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:scaleType="center"
                android:src="@drawable/button_off"
                android:background="@drawable/button_circle_notselect">
            </ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/theme"
                android:textSize="50dp"
                android:text="+">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>