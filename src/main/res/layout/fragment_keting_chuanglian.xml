<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".keting_fragment.keting_chuanglian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_linearlayout"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/keting_open_chuanglian"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_circle_notselect"
                android:scaleType="center"
                android:src="@drawable/button_off">
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="开窗帘">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_linearlayout"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/keting_close_chuanglian"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_circle_notselect"
                android:scaleType="center"
                android:src="@drawable/button_off">
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="关窗帘">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_linearlayout"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/keting_stop_chuanglian"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:scaleType="center"
                android:src="@drawable/juxing"
                android:background="@drawable/button_circle_notselect">
            </ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="停止">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>